$("#notice").stop();
$("#notice").addClass("success");
$("#notice").html("Item <%= @item.name %> was removed!");
$("#notice").show();
$("#notice").fadeOut(2000);
$("table#it_<%= params[:id] %>").remove();
var total = parseFloat($("#total").html());
var price = parseFloat("<%= @item.price %>");
$("#total").html(total-price);