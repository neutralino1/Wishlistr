if ("<%= @item.save %>" == "true")
{  
notify("success", "Item <%= @item.name %> was added!");
$('#theList tr:last').before("<tr id='it_<%= @item.id %>'><td><%= @item.name %></td><td><%= @item.price %> â‚¬</td><td><%= escape_javascript link_to(image_tag('delete.gif'), user_list_item_path(@user, @list, @item), :class => 'item_delete_btn') %></td></tr>");
